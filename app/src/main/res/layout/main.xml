<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent" 
	android:layout_height="fill_parent" android:background="@drawable/mainscreen_bg"
	android:gravity="center">
	<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:gravity="center">
		<HorizontalScrollView android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:layout_centerHorizontal="true" android:isScrollContainer="true">
	    	<TableLayout android:scrollbarStyle="outsideInset" android:id="@+id/main_sub_system" 
	    		android:layout_width="fill_parent" android:layout_height="fill_parent">
	        	<TableRow>
	            	<com.xunfang.experiment.logistics.widget.Main_item android:id="@+id/userMgr" 
	            		style="@style/sub_sys_item" />
	                <com.xunfang.experiment.logistics.widget.Main_item android:id="@+id/stationMgr" 
	                	style="@style/sub_sys_item" />
	            </TableRow>
	            <TableRow android:layout_marginTop="7.0dip">
	            	<com.xunfang.experiment.logistics.widget.Main_item android:id="@+id/goodstypeMgr" 
	                	style="@style/sub_sys_item" />
	                <com.xunfang.experiment.logistics.widget.Main_item android:id="@+id/goodsinfoMgr" 
	                	style="@style/sub_sys_item" />
	            </TableRow>
	            <TableRow>
	            	<com.xunfang.experiment.logistics.widget.Main_item android:id="@+id/packageMgr" 
	                	style="@style/sub_sys_item" />
	                <com.xunfang.experiment.logistics.widget.Main_item android:id="@+id/inoroutMgr" 
	                	style="@style/sub_sys_item" />
	            </TableRow>
	            <TableRow>
	            	<com.xunfang.experiment.logistics.widget.Main_item android:id="@+id/goodsfollowMgr" 
	                	style="@style/sub_sys_item" />
	                <com.xunfang.experiment.logistics.widget.Main_item android:id="@+id/exit" 
	                	style="@style/sub_sys_item" />
	            </TableRow>
	         </TableLayout>
	     </HorizontalScrollView>
	</RelativeLayout>
</LinearLayout>